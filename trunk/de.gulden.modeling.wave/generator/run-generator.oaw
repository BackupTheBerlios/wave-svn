<workflow>

<!--
workflow script for manually running code-generation  
 -->

	<!-- CHANGE PATHS TO YOUR CONFIGURATION  --> 
	<property name="model" value="/home/models/runtime-wave/testwave/MeinTest.wave"/>
	<property name="sourceFolder" value="/home/models/runtime-wave/testwave/src"/>
	<!-- - - - - - - - - - - - - - - - - - - --> 

	<component class="org.eclipse.xtend.typesystem.emf.XmiReader">
		<modelFile value="${model}"/>
		<outputSlot value="model"/>
	</component>
		
